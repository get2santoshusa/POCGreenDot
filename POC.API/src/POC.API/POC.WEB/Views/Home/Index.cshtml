@{
    Layout = null;
}
<div class="container" id="deposit">
    <div class="col-md-offset-3 col-md-5" id="box" style="margin-top:50px;">
        <h2 style="margin-left:100px;"> Deposite Screen</h2>
        <hr />
        <div class="row">
            <label class="control-label col-xs-4 input-sm" style="margin-left:50px; margin-top:2px;">From Account No</label>
            <div class="col-xs-4">
                <input type="text" id="txtFromAcc" class="input-group form-rounded col-xs-12" style="margin-left:15px;margin-top:7px;" />
            </div>
        </div>
        <div class="row">
            <label class="control-label col-xs-4 input-sm" style="margin-left:50px;">Destination Account No</label>
            <div class="col-xs-4">
                <input type="text" id="txtDestAcc" class="input-group form-rounded col-xs-12" style="margin-left:15px;margin-top:7px;" />
            </div>
        </div>
        <div class="row">
            <label class="control-label col-xs-4 input-sm" style="margin-left:50px;">Amount</label>
            <div class="col-xs-4">
                <input type="text" id="txtAmount" class="input-group form-rounded col-xs-12" style="margin-left:15px;margin-top:7px;" />
            </div>

        </div>
        <div class="row">
            <div class="btn-toolbar ">
                <button type="button" id="btnDeposite" class="btn btn-primary btn-color btn-bg-color btn-sm col-xs-6" style="margin-left:105px;margin-top:20px;">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> TRANSFER AMOUNT
                </button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12">
                <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px; top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001; opacity: .8; filter: alpha(opacity=70); display: none">
                    <p style="position: absolute; top: 30%; left: 45%; color: White;">
                        please wait...<span class="fa fa-spinner fa-pulse" style="font-size:1em; margin-right:12px;"></span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="saveModal" role="dialog" style="margin-top:100px; margin-left:20px;">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Information</h4>
                </div>
                <div class="modal-body">
                    <p id="dialog">Data Saved Successfully..</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/Pages/Home/Index.js"></script>
<script src="~/Scripts/Common/configService.js"></script>
<script src="~/Scripts/Common/businessobject.services.js"></script>